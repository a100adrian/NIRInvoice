<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
        <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>

        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>
<div style="margin: 10px 5px 5px;">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="dropdown" style="margin: 20px 10px 10px 10px;">
            <button class=" dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Invoice
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="{{ path('create_invoice') }}">Create</a></li>
                <li><a class="dropdown-item" href="{{ path("list_invoices") }}">View</a></li>
            </ul>

            <button class=" dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Nir
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="{{ path('create_nir') }}">Create</a></li>
                <li><a class="dropdown-item" href="{{ path("list_nirs") }}">View</a></li>
            </ul>
            <button class=" dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Balance
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                {#<li><a class="dropdown-item" href="{{ path('balance_index') }}">View</a></li>#}
            </ul>
            <button class=" dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Config
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                {#<li><a class="dropdown-item" href="{{ path('user_profile') }}">Config</a></li>#}
            </ul>
        </div>
    {% endif %}
</div>
<div style="margin: 10px 5px 5px;">{% block body %}{% endblock %}</div>

</body>
</html>
